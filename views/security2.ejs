     <script>
        // Global variable for the scanner instance
        let qrScanner;

        // Use a document ready function to ensure the DOM is loaded
        $(document).ready(function () {

            // Bind the startScanner function to the modal's shown event
            $('#scannerModal').on('shown.bs.modal', function () {
                startScanner();
            });

            // Bind the scanner stop and cleanup logic to the modal's hidden event
            $('#scannerModal').on('hidden.bs.modal', function () {
                if (qrScanner) {
                    qrScanner.stop().then(() => {
                        // Use jQuery to select the element and empty its content
                        $("#qr-reader").empty();
                    });
                }
            });
        });

        /**
         * Initializes and starts the QR code scanner.
         */
        function startScanner() {
            const qrRegion = $("#qr-reader");
            qrScanner = new Html5Qrcode("qr-reader");

            qrScanner.start(
                { facingMode: "environment" },
                {
                    fps: 10,
                    qrbox: 250
                },
                async (decodedText) => {
                    if ('vibrate' in navigator) navigator.vibrate(200);

                    showToast("QR Scanned", `Scanned: ${decodedText}`, "text-success");

                    qrScanner.stop().then(() => {
                        $("#scannerModal").modal('hide');
                        qrRegion.empty();
                    });

                    // Use the $.ajax method for the POST request
                    // $.ajax({
