                    //     }
                    // });
                    $.ajax({
                        type: 'POST',
                        url: '/user/scan',
                        contentType: 'application/json',
                        data: JSON.stringify({ token: decodedText }),
                        success: function (result) {
                            if (result.success) {
                                Swal.fire({
                                    title: 'Success!',
                                    text: result.message || 'Guest scanned.',
                                    icon: 'success',
                                    confirmButtonText: 'OK'
                                });
                            } else {
                                Swal.fire({
                                    title: 'Error!',
                                    text: result.message || 'Scan failed.',
                                    icon: 'error',
                                    confirmButtonText: 'OK'
                                });
                            }
                        },
                        error: function (xhr) {
                            let message = "Network error while scanning.";
                            if (xhr.responseJSON && xhr.responseJSON.message) {
                                message = xhr.responseJSON.message;
                            }

                            Swal.fire({
                                title: 'Error!',
                                text: message,
                                icon: 'error',
                                confirmButtonText: 'OK'
                            });
                        }
                    });
                },
                (errorMessage) => {
                    // Handle scan errors (optional)
