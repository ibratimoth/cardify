<!doctype html>
<html lang="en" class="layout-navbar-fixed layout-menu-fixed layout-compact" dir="ltr" data-skin="default"
  data-assets-path="../../assets/" data-template="vertical-menu-template" data-bs-theme="light">

<head>
  <meta charset="utf-8" />
  <meta name="viewport"
    content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0" />
  <meta name="robots" content="noindex, nofollow" />
  <title>Cardify: Dashboard</title>
  <link rel="icon" type="image/x-icon" href="../../assets/cardifylogo2.png" />

  <!-- Core CSS -->
  <link rel="stylesheet" href="../../assets/vendor/css/core.css" />
  <link rel="stylesheet" href="../../assets/css/demo.css" />
  <link rel="stylesheet" href="../../assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.css" />
  <link rel="stylesheet" href="../../assets/vendor/fonts/iconify-icons.css" />
  <link rel="stylesheet" href="../../assets/vendor/fonts/flag-icons.css" />
  <link rel="stylesheet" href="../../assets/vendor/libs/apex-charts/apex-charts.css" />

  <!-- Helpers -->
  <script src="../../assets/vendor/js/helpers.js"></script>
  <script src="../../assets/vendor/js/template-customizer.js"></script>
  <script src="../../assets/js/config.js"></script>

  <!-- QR Scanner -->
  <script src="https://unpkg.com/html5-qrcode" type="text/javascript"></script>

  <style>
    .menu-item a:hover,
    .menu-item a.active {
      background-color: rgba(255, 255, 255, 0.1) !important;
    }

    #qr-reader {
      width: 100%;
      max-width: 350px;
      margin: 1rem auto;
    }

    #scanner-section {
      display: none;
    }
  </style>
</head>

<body>
  <div class="layout-wrapper layout-content-navbar">
    <div class="layout-container">

      <%-include('sidebar.ejs')-%>

      <div class="layout-page">
        <%-include('header.ejs')-%>

        <!-- Content wrapper -->
        <div class="content-wrapper">
          <div class="container-xxl flex-grow-1 container-p-y">

            <!-- Scanner Controls -->
            <button id="start-scanner-btn" class="btn btn-primary mb-3">
              <i class="bx bx-qr-scan me-1"></i> Start Scanner
            </button>

            <div id="scanner-section" class="card p-3">
              <div id="qr-reader"></div>
              <div id="qr-reader-results" class="mt-3"></div>
              <button id="stop-scanner-btn" class="btn btn-danger mt-2">
                <i class="bx bx-x-circle me-1"></i> Stop Scanner
              </button>
            </div>

          </div>
          <div class="content-backdrop fade"></div>
        </div>
      </div>
    </div>

    <!-- Overlay -->
    <div class="layout-overlay layout-menu-toggle"></div>
    <div class="toast-container position-fixed bottom-0 end-0 p-3" style="z-index: 1100;"></div>
    <div class="drag-target"></div>
  </div>

  <!-- Scripts -->
  <script src="../../assets/vendor/libs/jquery/jquery.js"></script>
  <script src="../../assets/vendor/js/bootstrap.js"></script>
  <script src="../../assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.js"></script>
  <script src="../../assets/vendor/js/menu.js"></script>
  <script src="../../assets/vendor/libs/apex-charts/apexcharts.js"></script>
  <script src="../../assets/js/main.js"></script>
  <script src="../../assets/js/dashboards-analytics.js"></script>

  <script>
    let qrScanner;

    $(document).ready(function () {
      // Highlight active menu link
      const currentPath = window.location.pathname;
      $(".menu-link").each(function () {
        const linkPath = new URL(this.href).pathname;
        if (linkPath === currentPath) $(this).addClass("active");
      });

      // Start scanner
      $("#start-scanner-btn").on("click", function () {
        $("#scanner-section").show();
        startScanner();
        $(this).hide();
      });

      // Stop scanner
      $("#stop-scanner-btn").on("click", function () {
        stopScanner();
        $("#scanner-section").hide();
        $("#start-scanner-btn").show();
      });
    });

    function startScanner() {
      qrScanner = new Html5Qrcode("qr-reader");
      qrScanner.start(
        { facingMode: "environment" },
        { fps: 10, qrbox: 250 },
        async (decodedText) => {
          if ('vibrate' in navigator) navigator.vibrate(200);
          showToast("QR Scanned", `Scanned: ${decodedText}`, "text-success");

          // Send to backend
          $.ajax({
            type: 'POST',
            url: '/user/scan',
            contentType: 'application/json',
            data: JSON.stringify({ qr: decodedText }),
            success: function (result) {
              if (result.success) {
                showToast("Success", result.message || "Guest scanned.", "text-success");
              } else {
                showToast("Error", result.message || "Scan failed.", "text-danger");
              }
            },
            error: function (xhr) {
              let message = "Network error while scanning.";
              if (xhr.responseJSON && xhr.responseJSON.message) {
                message = xhr.responseJSON.message;
              }
              showToast("Error", message, "text-danger");
            }
          });
        }
      );
    }

    function stopScanner() {
      if (qrScanner) {
        qrScanner.stop().then(() => {
          $("#qr-reader").empty();
        });
      }
    }

    function showToast(title, body, titleClass) {
      const toastHtml = `
        <div class="toast align-items-center text-bg-light border-0" role="alert"
          aria-live="assertive" aria-atomic="true" data-bs-delay="4000">
          <div class="toast-header">
            <strong class="me-auto ${titleClass}">${title}</strong>
            <small class="text-muted">Now</small>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
          </div>
          <div class="toast-body">${body}</div>
        </div>`;

      const $toast = $(toastHtml);
      $(".toast-container").append($toast);
      const toast = new bootstrap.Toast($toast[0]);
      toast.show();
    }
  </script>
</body>
</html>
