    <script src="https://unpkg.com/html5-qrcode" type="text/javascript"></script>
    <script>
        let qrScanner;

        function startScanner() {
            const qrRegion = document.getElementById("qr-reader");
            qrScanner = new Html5Qrcode("qr-reader");

            qrScanner.start(
                { facingMode: "environment" },
                {
                    fps: 10,
                    qrbox: 250
                },
                async (decodedText) => {
                    // Optional: beep or vibrate
                    if ('vibrate' in navigator) navigator.vibrate(200);

                    showToast("QR Scanned", `Scanned: ${decodedText}`, "text-success");

                    // Stop scanner after successful scan
                    qrScanner.stop().then(() => {
                        $("#scannerModal").modal('hide');
                        qrRegion.innerHTML = ""; // cleanup
                    });

                    // ðŸ” Send scanned value to backend
                    try {
                        const res = await fetch('/api/events/scan', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({ token: decodedText })
                        });

                        const result = await res.json();

                        if (result.success) {
                            showToast("Success", result.message || "Guest scanned.", "text-success");
                        } else {
                            showToast("Error", result.message || "Scan failed.", "text-danger");
                        }
                    } catch (err) {
                        showToast("Error", "Network error while scanning.", "text-danger");
                    }
                },
                (errorMessage) => {
                    // console.warn("Scan error", errorMessage);
                }
            );
        }

        $('#scannerModal').on('shown.bs.modal', function () {
            navigator.permissions.query({ name: 'camera' }).then(permissionStatus => {
                if (permissionStatus.state === 'granted' || permissionStatus.state === 'prompt') {
                    startScanner();
                } else {
                    showToast("Error", "Camera permission denied.", "text-danger");
                }
            }).catch(() => {
                startScanner(); // fallback if Permissions API unsupported
            });
        });
        $('#scannerModal').on('hidden.bs.modal', function () {
            if (qrScanner) {
                qrScanner.stop().then(() => {
                    document.getElementById("qr-reader").innerHTML = "";
                });
            }
        });

        function showToast(title, body, titleClass) {
            const toastHtml = `
                <div class="toast align-items-center text-bg-light border-0" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="5000">
                    <div class="toast-header">
                        <strong class="me-auto ${titleClass}">${title}</strong>
                        <small class="text-muted">Now</small>
                        <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                    <div class="toast-body">${body}</div>
                </div>`;

            const $toast = $(toastHtml);
            $('.toast-container').append($toast);
            const toast = new bootstrap.Toast($toast[0]);
            toast.show();
        }
