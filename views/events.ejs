    <title>Events</title>

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="../../assets/cardifylogo2.png" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com/" />
