            --primary-text-color: #29317a;
            /* Dark blue */
            --accent-color: #e89a1c;
            /* Gold for names/accents */
            --secondary-text-color: #3f444b;
            /* Dark charcoal for details */
        }

        .wedding-invitation-card {
            max-width: 350px;
            margin-left: auto;
            margin-right: auto;
            padding: 10px 5px;
            background-color: var(--background-color);
            border: 2px solid var(--accent-color);
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            text-align: center;
            position: relative;
            overflow: hidden;
            font-family: 'Playfair Display', serif;
            color: var(--primary-text-color);
            transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        }

