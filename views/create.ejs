        .wedding-invitation-card .details {
            font-size: 0.8em;
            line-height: 1.8;
            margin: 15px 0;
            color: var(--primary-text-color);
        }

        .wedding-invitation-card .details strong {
            color: var(--accent-color);
            font-weight: 700;
        }

        .wedding-invitation-card .details i {
            color: var(--accent-color);
            margin-right: 5px;
        }

        .wedding-invitation-card .rsvp-link {
            display: inline-block;
            margin-top: 1px;
            padding: 8px 20px;
            font-size: 1.2em;
            font-weight: 700;
            text-decoration: none;
            color: white;
            background-color: var(--accent-color);
            border-radius: 50px;
            transition: background-color 0.3s ease-in-out, transform 0.2s;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .wedding-invitation-card .rsvp-link:hover {
            background-color: #A27F51;
            transform: translateY(-2px);
        }

        .wedding-invitation-card .footer-note {
            font-size: 0.75em;
            margin-top: 15px;
            color: var(--secondary-text-color);
            font-style: italic;
        }
    </style>

